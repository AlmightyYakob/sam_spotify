{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "no-console": "off",
        "no-var": "error",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "prefer-const": [
            "error",
            {
                "destructuring": "all"
            }
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}